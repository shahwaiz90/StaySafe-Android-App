<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutid"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#dc0202"
    android:orientation="vertical"
    tools:context=".MainPage"
    android:focusable="true" android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/RelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="#e9f1f8"
        android:padding="5dip" >

        <ImageView
            android:id="@+id/banner"
            android:layout_width="80dip"
            android:layout_height="50dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Logo2"
            android:src="@drawable/porto" />

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="Logo"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@+id/ImageView01"
            android:text="entre vizinhos"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#637fa0"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/warningMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/helpMeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/notice"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/customText"
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/roundedcorner"
        android:ems="10"
        android:gravity="left" 
        android:inputType="textMultiLine"
        android:lines="3"
        android:textColor="#000000"
        android:textColorHint="#CCCCCC" />

    <Button
        android:id="@+id/addGuardiann"
        android:layout_width="200dip"
        android:layout_height="30dip"
        android:layout_alignLeft="@+id/customText"
        android:layout_below="@+id/customText" 
        android:layout_marginTop="17dp"
        android:background="@drawable/addguardian" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/updateButton"
        android:ems="10"
        android:text="SALVAR"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/userManual"
        android:layout_width="150dip"
        android:layout_height="30dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dip"
        android:layout_marginBottom="25dp"
        android:background="@drawable/usermanual" />

    <Button
        android:id="@+id/updateButton"
        android:layout_width="45dip"
        android:layout_height="46dip"
        android:layout_alignBottom="@+id/addGuardiann"
        android:layout_margin="10dip"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@+id/warningMessage"
        android:background="@drawable/updatebutton" />

    <Button
        android:id="@+id/helpMeButton"
        android:layout_width="143dp"
        android:layout_height="140dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:background="@drawable/redbutton"
        android:focusable="true"
        android:textStyle="bold" />

</RelativeLayout>